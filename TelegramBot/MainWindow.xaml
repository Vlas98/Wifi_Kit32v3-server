<Window x:Class="TelegramBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramBot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label x:Name="Label1" FontSize="48" Margin="0,20,0,0" Content="Text:"/>
            <TextBox x:Name="Text" Margin="-350,-50,0,0 " Width="200"/>

            <Button x:Name="btnSend" Click="send" Width="100" Height="30" Margin="0,-50,0,0">Send</Button>
            <Button x:Name="btnClear" Click="clear" Width="100" Height="30" Content="Clear display" Margin="0,-40,10,394" HorizontalAlignment="Right"/>
        </StackPanel>
        
    </Grid>
</Window>
